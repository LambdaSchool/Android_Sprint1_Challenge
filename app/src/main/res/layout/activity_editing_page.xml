<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditingPageActivity">
    <EditText
        android:id="@+id/input_data"
        android:hint="Input movie you have watched."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"/>
    <Switch
        android:id="@+id/switch_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:text="Watched:"
        android:drawableBottom="@android:color/holo_blue_dark"

        android:textOff="No"
        android:textOn="Yes"/>
    <TextView
        android:id="@+id/text_debug_for_switch"
        android:text="Once you choose from list then delete text here and save. It will be deleted like the way delete button would do."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/button_save"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_delete"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>